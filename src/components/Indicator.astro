---
const { description='', ...props } = Astro.props
---


<indicator {...props} />


<style
    is:global
    lang=scss
    define:vars={{
        indicatorText: `"${description}"`
    }}
>
    indicator {
        z-index: 999;
        color: var(--hint-color);

        &::after {
            content: '';

            position: fixed;
            left: calc(50% - 14px);
            bottom: 25px;

            width: 25px;
            height: 25px;

            border-right: 3px solid;
            border-bottom: 3px solid;
            bolder-color: var(--hint-color);
            border-bottom-right-radius: 4px;

            animation: indicator 2s ease-in-out infinite
        }

        &::before {
            content: var(--indicatorText);

            width: 100%;
            position: fixed;
            bottom: 60px;

            text-align: center;
            animation: fade-left 1s .3s both
        }

        @media (max-height: 768px) or (max-width: 768px) {
            display: none
        }
    }

    @keyframes indicator {
        from {
            opacity: 0;
            transform: translate(0,-10px) rotate(45deg)
        }
        50% {
            opacity: 1
        }
        to {
            opacity: 0;
            transform: translate(0,10px) rotate(45deg)
        }
    }
</style>