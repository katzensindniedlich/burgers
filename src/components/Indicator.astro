---
const { description='' } = Astro.props
---


<indicator transition:presist=indicator />

<style
    lang=scss
    define:vars={{
        indicatorText: `"${description}"`
    }}
>
    indicator {
        z-index: 999;
        color: #ccced1;

        &::after {
            content: '';

            position: fixed;
            left: calc(50% - 14px);
            bottom: 25px;

            width: 25px;
            height: 25px;

            border-right: 3px solid #ccced1;
            border-bottom: 3px solid #ccced1;
            border-bottom-right-radius: 4px;

            animation: fade_move_down 2s ease-in-out infinite;
        }

        &::before {
            content: var(--indicatorText);

            position: fixed;
            bottom: 60px;
            width: 100%;

            text-align: center;
            animation: fade-left 1s .3s 1 both;
        }

        @media (max-height: 768px) {
            display: none;
        }
        @media (max-width: 768px) {
            display: none;
        }
    }

    @keyframes fade_move_down {
        from {
            opacity: 0;
            transform: translate(0,-10px) rotate(45deg)
        }
        50% {
            opacity: 1
        }
        to {
            opacity: 0;
            transform: translate(0,10px) rotate(45deg)
        }
    }
</style>