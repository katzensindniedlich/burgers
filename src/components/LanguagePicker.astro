---
import { locales } from '@utils'


const
    { current } = Astro.props,
    alternates = locales.filter(entry => entry !== current)
---


<picker>
{ alternates.map(entry => (
        <a 
            href={`/${entry}/${Astro.url.pathname.split('/').slice(2).join('/')}`} 
            set:text={entry.toUpperCase()} 
        />
    ))
}
</picker>

<style lang=scss>
    picker {
        right: 1vw;
        bottom: 1vw;
        position: fixed;
        display: grid
    }

    a {
        padding: 10px;
        border-radius: 10px;

        font-size: 1.5em;
        font-weight: bolder;
        letter-spacing: .2px;
        text-decoration: none;

        color: #b8b8b8;
        background: #00000011;
        transition: all .3s ease-in-out;

        &:hover {
            color: #4e4e4e;
            background: #00000040;
            transform: scale(1.03)
        }
    }
</style>