---
import { locales } from '@utils'


const
    { current } = Astro.props,
    alternates = locales.filter(entry => entry !== current)
---


<picker>
{ alternates.map(entry => (
        <a 
            href={`/${entry}/${Astro.url.pathname.split('/').slice(2).join('/')}`} 
            set:text={entry.substring(0, 2).toUpperCase()} 
        />
    ))
}
</picker>

<style lang=scss>
    picker {
        right: 20px;
        bottom: 20px;
        position: fixed;
 
        display: flex;
        flex-direction: row;
        gap: 1vw;
    }

    a {
        width: 43px;
        padding: 10px;
        border-radius: 10px;

        font-size: 1.5em;
        font-weight: bolder;
        letter-spacing: .2px;
        text-align: center;
        text-decoration: none;

        color: #b8b8b8;
        background: #00000011;
        transition: all .3s ease-in-out;

        &:hover, &:focus-visible {
            color: #4e4e4e;
            background: #00000040;
            transform: scale(1.03);
            outline: unset
        }
    }
</style>