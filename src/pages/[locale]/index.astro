---
import Layout from '@layouts/Layout.astro'
import LanguagePicker from '@components/LanguagePicker.astro'
import Burger from '@images/burger-350x350.png'

import { Image } from 'astro:assets'
export { getLanguagePaths as getStaticPaths } from '@utils'


const
    { text } = Astro.props,
    { locale } = Astro.params,
    meta = text.path['/']
---


<Layout 
    lang={locale} 
    title={meta.title} 
    description={meta.description}
>
    <page id=one>
        <Image src={Burger} format=png alt={text.bruger_alt} />
        <text>
            <p set:text={text.welcome} />
            <h1 set:text={text.hello} />
        </text>
    </page>
    <LanguagePicker current={locale} />
</Layout>


<style lang=scss>
    img {
        max-width: 75vw;
        max-height: 50vh;
        object-fit: contain;

        animation: wiggle 1.5s infinite;
        filter: drop-shadow(5px 5px 20px black);
    }

    page#one {
        display: grid;
        gap: calc(5vh + 3vw);
        align-content: center;
        justify-items: center;
        justify-content: center;

        box-shadow: inset 0px 0px 50px #0000004d
    }

    p {
        @media (max-width: 768px) {
            margin-bottom: 1.5vh
        }
    }
</style>